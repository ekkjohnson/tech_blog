<div class="add-main">
    <h1>Add New Comment</h1>
  <form id="new-form" class="new-comment-form">
  <div class="form-group">
    <label for="comment-title-input">Comment Title:</label>
    <input type="text" class="form-control" id="comment-title-input">
  </div>
  <div class="form-group">
    <label for="comment-content">Comment Content:</label>
    <textarea class="form-control" id="comment-content-input" rows="3"></textarea>
  </div>
  <button class="btn btn-dark" type="submit">Add Comment</button>
</form>  
</div>

