{{!-- Cards for posts --}}
{{#each posts as |post|}}
<div class="post-card card" data-post="{{id}}">
    <h1>Blog Title: {{title}} --- Post id: {{id}}</h1>
    <p>Content: {{content}}    Date created: {{created}}</p>
</div>
{{/each}}
